<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/icon16x16.png">
         <run
               class="eu.hydrologis.jconsole.StageApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="JConsole Space"
            class="eu.hydrologis.jconsole.Perspective"
            id="eu.hydrologis.jconsole.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="Edit"
               sibling_order="&lt;command&#x0D;&#x0A;                  commandId=&quot;org.eclipse.ui.edit.text.openLocalFile&quot;&#x0D;&#x0A;                  label=&quot;Open&quot;&#x0D;&#x0A;                  style=&quot;push&quot;&gt;&#x0D;&#x0A;            &lt;/command&gt;">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="Undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="Redo"
                  style="push">
            </command>
            <separator
                  name="eu.hydrologis.jconsole.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <separator
                  name="eu.hydrologis.jconsole.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.findIncremental"
                  label="Find Incremental"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.findReplace"
                  label="Find/Replace"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.findNext"
                  label="Find Next"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.findPrevious"
                  label="Find Previous"
                  style="push">
            </command>
            <separator
                  name="eu.hydrologis.jconsole.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.text.goto.line"
                  label="Goto Line"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.toggleShowWhitespaceCharacters"
                  label="Show Whitespaces"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.hippieCompletion"
                  label="Word Completion"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.contentAssist.proposals"
                  label="Command Completion"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.lowerCase"
                  label="To Lowercase"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.upperCase"
                  label="To Uppercase"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="eu.hydrologis.stage.application"
            name="Stage"
            description="%productBlurb"
            >
         <property
               name="windowImages"
               value="icons/icon16x16.png,icons/icon32x32.png,icons/icon48x48.png,icons/icon64x64.png,icons/icon128x128.png">
         </property>
         <property
               name="appName"
               value="Stage">
         </property>
         <property
               name="aboutImage"
               value="about.png">
         </property>
         <property
               name="aboutText"
               value="%blurb">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

</plugin>
